@model HomeVM
<main>
<section id="Slider">

    <div class="owl-carousel owl-theme ">
        @foreach (var slide in Model.HeadSlides)
        {
            <div class="item">
                <img src="~/Assets/Img/@slide.Image" alt="">
            </div>
        }
    </div>
    <!-- or ul.my-slider > li -->
</section>

<section id="headcard">
    <h3 class="head-card-title"> Last added</h3>
    <div class="headcards">
        @foreach (var product in Model.Products)
        {
            <div class="card">
                <a class="card-image" href="~/Assets/img/@product.Image" target="_blank"
                   style="background-image: url('Assets/img/@product.Image');">
                    <img src="~/Assets/img/@product.Image" alt="Psychopomp"/>
                </a>
                <a class="card-description" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id" target="_blank">
                    <h2>@product.Name</h2>
                    <p>@product.ProductCategory.Name</p>
                </a>
            </div>
        }
